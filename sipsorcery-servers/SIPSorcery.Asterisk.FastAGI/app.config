<?xml version="1.0"?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
  </configSections>
	<log4net>
		<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%m%n"/>
			</layout>
		</appender>
		<appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender,log4net">
			<param name="File" value="root.log"/>
			<param name="AppendToFile" value="false"/>
			<param name="MaxSizeRollBackups" value="3"/>
			<param name="MaximumFileSize" value="500kB"/>
			<param name="RollingStyle" value="Size"/>
			<param name="StaticLogFileName" value="true"/>
			<layout type="log4net.Layout.PatternLayout,log4net">
				<param name="ConversionPattern" value="%d [%t] %-5p %c [%x] - %m%n"/>
			</layout>
		</appender>
		<root>
			<priority value="DEBUG"/>
			<appender-ref ref="ConsoleAppender"/>
			<appender-ref ref="RollingLogFileAppender"/>
		</root>
	</log4net>
	<appSettings>
    <add key="MonitorEventPort" value="10001"/>
    
    <!-- FastAGI settings. -->
		<add key="AGIServerIPAddress" value="10.1.1.5"/>
		<add key="AGIServerPort" value="4573"/>
    <add key="AGIWorkerThreadsCount" value="1"/>
    <add key="FastAGIQueuedRequestsAlertThreshold" value="10"/>
    <add key="FastAGIQueueMetricsFilePath" value="fastagi-queuesizemetrics.txt"/>
    <add key="FastAGITimeMetricsFilePath" value="fastagi-apptimesmetrics.txt"/>

    <!-- Notifications -->
    <add key="AlertEmailAddress" value=""/>
  </appSettings>

<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/></startup></configuration>
