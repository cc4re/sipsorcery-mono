				<Ellipse Height="12" Width="12" Canvas.Left="8" Fill="#FF00FFFD" Stroke="#FF000000" Canvas.Top="6" x:Name="m_appStatusIcon"/>
			</Canvas>
			<SIPSorcery:CreateAccountControl x:Name="m_createAccountControl" VerticalAlignment="Top" Margin="0,120,0,0" HorizontalAlignment="Center" Visibility="Collapsed"/>
			<Image Height="Auto" Width="Auto" Source="../Images/wizard-logo.png" Stretch="None" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="m_logo"/>
			<Image Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Width="185" Source="../Images/small_logo.png" Stretch="Fill"/>
			<TextBlock Height="22" HorizontalAlignment="Left" Margin="21,8,0,0" VerticalAlignment="Top" Width="376" Text="" TextWrapping="Wrap" Foreground="#FF85DB02" x:Name="m_versionTextBlock"/>
			<TextBox x:Name="m_provisioningSvcTextBox" Text="https://www.sipsorcery.com/provisioning.svc" TextWrapping="Wrap" Width="302" TabIndex="1" IsTabStop="True" TabNavigation="Local" Height="20" FontSize="10" Padding="1,0,0,0" VerticalContentAlignment="Top" HorizontalAlignment="Left" Margin="82,49,0,0" VerticalAlignment="Top" Visibility="Collapsed"/>
			<TextBlock Height="16" Width="69.853" FontSize="11" Foreground="{StaticResource NormalTextBrush}" Text="Set Service" TextWrapping="Wrap" TextDecorations="Underline" MouseLeftButtonUp="DisplaySetServiceTextBox" Cursor="Hand" HorizontalAlignment="Left" Margin="8,49,0,0" VerticalAlignment="Top" x:Name="m_setSvcLink" d:LayoutOverrides="Width" Visibility="Collapsed"/>
			<TextBlock Height="16" Width="33.853" FontSize="11" Foreground="{StaticResource NormalTextBrush}" Text="Apply" TextWrapping="Wrap" TextDecorations="Underline" MouseLeftButtonUp="ApplySetService" Cursor="Hand" HorizontalAlignment="Left" Margin="388,49,0,0" x:Name="m_setSvcLinkApply" VerticalAlignment="Top" Visibility="Collapsed"/>
			<TextBlock Cursor="Hand" x:Name="m_aboutLink" Foreground="{StaticResource NormalTextBrush}" Text="About" TextDecorations="Underline" TextWrapping="Wrap" MouseLeftButtonUp="AboutLink_MouseLeftButtonUp" Margin="0,54,0,0" Height="15" VerticalAlignment="Top" HorizontalAlignment="Center"/>
		</Grid>
	</ScrollViewer>
</UserControl>